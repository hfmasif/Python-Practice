# Nested if-else
# marks = 80

# if marks >= 80:
#     print("Result is A+ !")
# elif marks >= 70 and marks < 80:
#     print("Result is A- !")
# elif marks >= 60 and marks < 70:
#     print("Result is B !")
# elif marks >= 40 and marks < 50:
#     print("Result is C !")
# else:
