marks = int(input("Enter Your Number : "))

if marks >= 80:
    print("Grade is A+ !")
elif marks >= 70 and marks < 80:
    print("Grade is A- !")
elif marks >= 60 and marks < 70:
    print("Grade is B !")
elif marks >= 40 and marks < 50:
    print("Grade is C !")
else:
    print("Grade is Fail !!")
